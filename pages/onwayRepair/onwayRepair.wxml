<view class='page'>
   <view class='noevent' wx:if="{{list.length<=0}}">当前无在途维修事件</view> 
  <view class="weui-tab__content" wx:else>
     <block wx:for-items="{{list}}" wx:key="{{index}}"> 
      <view class="weui-form-preview">
        <view class="numTitle">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">调度单号：{{item.waybillNum}}</view>
                <view class="weui-form-preview__value_in-hd" style='font-size:12px;'>{{item.createTime}}</view>
            </view>
        </view>
        <view class="weui-form-preview__bd">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">司机：{{item.driverName}}<text class='liceniseNum'>（{{item.truckNum}}）</text><text style="{{item.examineStatus?'background: #ff9800':'background: #00c853'}}" class="statusTitle">{{item.examineStatus}}</text></view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">线路：{{item.routeName}}<text class='gotime'>{{item.planDepartureTime}}发车</text></view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">类型：在途维修</view>
                <image wx:if="{{item.imgIds}}" data-imgids="{{item.imgIds}}" bindtap="handleOpen" src="../image/have_picture.png" class="logo"></image>
            </view>
            <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">备注：{{item.description}}</view>
            </view>
        </view>
        <view class="weui-form-preview__bd" wx:if="{{item.examineUserName}}" style="border-top: 1rpx solid #D9D9D9;">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">审核人员：{{item.examineUserName}}</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">审核时间：{{item.examineTime}}</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">审核备注：{{item.remark}}</view>
            </view>
        </view>
        <view class="weui-form-preview__ft" wx:else>
          <button class="weui-btn mini-btn driverBtn" type="primary" plain="true" bindtap="showM" data-examineStatus='1' data-id="{{item.id}}">拒绝申请</button>
          <view><button class="weui-btn mini-btn createdfull" type="primary" plain="true" bindtap="showM" data-examineStatus='0' data-id="{{item.id}}">同意申请</button>
          </view>
        </view>
      </view>
     </block> 
  </view>

  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
  <view class="modalDlg" wx:if="{{showModal}}">
    <form bindsubmit="examine">
      <view class='mtitle'><text>维修申请-{{examineStatus==='1'?"拒绝":"同意"}}</text><text class='iconfont icon-cc-close-circle close' bindtap='close'></text></view>
      <view class='content'>
        <view><textarea class="weui-textarea" placeholder-class="phcolor" value='{{examineRemark}}' name="examineRemark" placeholder="请输入备注" style="height: 180rpx" /></view>
        <view>备注筛选</view>
        <view class='license'>
          <block wx:for-items="{{examineStatus==='1'?disagreeArr:agreeArr}}" wx:key="{{index}}">
              <view bindtap="getLicense" data-remark="{{item}}"><text>{{item}}</text></view>
              </block>
        </view>
     </view>
      <button class="weui-btn exmbtn {{examineStatus==='1'?'disagreeexm':''}}" type="primary" formType="submit">{{examineStatus==='1'?"拒绝":"同意"}}申请</button>
    </form>
  </view>
</view>

<i-modal show-cancel="{{false}}" show-ok="{{false}}" title="{{none}}" visible="{{visible}}" bind:ok="handleClose" bind:cancel="handleClose">
  <view bindtap="closeMadol" class="delete"><image src="../image/delete.png"></image></view>
  <view class="item_img" wx:for="{{imgList}}" wx:key="{{index}}"><image data-current="{{item}}" bindtap="imgTap" src="{{item}}"></image></view>
</i-modal>