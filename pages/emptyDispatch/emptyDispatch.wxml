<view class="page">
  <view class="weui-tab__content" >
  <form bindsubmit="addEmptyFun">
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
              <view class="weui-label">司机</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value='{{driver}}' placeholder="司机姓名" placeholder-class="phcolor" disabled="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
              <view class="weui-label">车牌号</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value='{{license}}' placeholder="请输入手机号" placeholder-class="phcolor" disabled="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
              <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value='{{phone}}' placeholder="请输入手机号" placeholder-class="phcolor" disabled="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
              <view class="weui-label">发车站点</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value='{{startName}}' placeholder="开始站点" placeholder-class="phcolor" disabled="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">空载线路</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindrouteChange" value="{{routeIndex}}" range="{{route}}" range-key="name">
                    <view class="weui-select weui-select_in-select-after">{{route[routeIndex].name}}</view>
                </picker>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
              <view class="weui-label">发车时间</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" value='{{actualArriveTime=="null"||actualArriveTime==""?planArriveTime:actualArriveTime}}' placeholder="发车时间" placeholder-class="phcolor" disabled="true"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">到达时间</view>
            </view>
            <view class="weui-cell__bd ontime" >
              <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                  <view class="weui-input ondate">{{date}}</view>
              </picker>
              <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-input">{{time}}</view>
                    </picker>
            </view>
        </view>
    </view>
    <button class="weui-btn createdDispatch" type="primary" formType="submit">创建并下发</button>
   </form>
  </view>
</view>
