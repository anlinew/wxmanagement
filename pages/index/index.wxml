<!--index.wxml-->
<view class="container">
  <view class='header'>
    <view class="avatar">
      <view>
        <image class='avatarImage' src="../image/avatar@2x.png"></image>
      </view>
      <text class="nickName">{{username}}</text>
    </view>
    <view class="mission">
      <view>
        <view class='missionNum'>{{todaynum}}</view>
        <view>当日调度任务</view>
      </view>
      <view>
        <view class='missionNum'>{{monthnum}}</view>
        <view>本月调度任务</view>
      </view>
    </view>
  </view>
  <view class="weui-grids">
      <block wx:for-items="{{grids}}" wx:key="{{index}}">
          <navigator url="{{item.pageUrl}}" class="weui-grid" hover-class="weui-grid_active">
              <image class="weui-grid__icon" src="{{item.imageUrl}}" />
              <view class="weui-grid__label">{{item.title}}</view>
          </navigator>
      </block>
  </view>
</view>
