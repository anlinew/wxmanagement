<view class="weui-tab__content">
  <view class='noevent' wx:if="{{list.length<=0}}">当前无需要审核的单据</view>
  <block wx:for="{{list}}" wx:key="{{index}}">
    <view class="weui-form-preview">
      <view class="weui-form-preview__hd">
          <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">调度单号：{{item.waybillNum}}</view>
              <view class="weui-form-preview__value_in-hd" style='font-size:12px;'>{{item.createTime}}</view>
          </view>
      </view>
      <view class="weui-form-preview__bd">
          <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">状态：<text>{{item.examineStatus}}</text></view>
          </view>
          <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">司机：{{item.driverName}}<text class='liceniseNum'>（{{item.truckNum}}）</text></view>
          </view>
          <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">线路：{{item.routeName}}<text class='gotime'>2018-06-2015:00:00发车</text></view>
          </view>
          <view class="weui-form-preview__item">
              <view class="weui-form-preview__label">类型：{{item.statusName}}<text class='iconfont icon-tupian'></text></view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">申请数量：{{item.unit === '元' ? item.money * 0.01 : item.money}}{{' '+item.unit}}</view>
          </view>
      </view>
      <view class="weui-form-preview__bd" wx:if="{{item.examineUser}}" style="border-top: 1rpx solid #D9D9D9;">
        <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">审核人员：{{item.examineUser}}</view>
        </view>
        <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">审核时间：{{item.examineTime}}</view>
        </view>
        <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">审核备注：{{item.remark}}</view>
        </view>
      </view>
      <view class="weui-form-preview__ft" wx:else>
        <button class="weui-btn mini-btn driverBtn" type="primary" plain="true" bindtap="showM" data-examineStatus='3' data-id="{{item.id}}">拒绝申请</button>
        <view><button class="weui-btn mini-btn createdfull" type="primary" plain="true" bindtap="showM" data-examineStatus='2' data-id="{{item.id}}">同意申请</button>
        </view>
      </view>
    </view>
  </block>

  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
    <view class="modalDlg" wx:if="{{showModal}}">
    <form bindsubmit="examine">
    <view class='mtitle'><text>单据审核-{{examineStatus==='3'?"已驳回":"已审核"}}</text><text class='iconfont icon-cc-close-circle close' bindtap='close'></text></view>
      <view class='content'>          
        <view class='exmoney'><text>审批数量：</text><input class="weui-input" placeholder-class="phcolor" value="{{examineMoney}}" name="examineMoney" placeholder="请输入审批数量"/></view>
        <view><text>审批备注：</text>
        <textarea class="weui-textarea" placeholder-class="phcolor" value='{{remark}}' name="remark" placeholder="请输入审批备注" style="height: 180rpx" />
        </view>
      </view>
        <button class="weui-btn exmbtn {{examineStatus==='3'?'disagreeexm':''}}" type="primary" formType="submit">{{examineStatus==='3'?"已驳回":"已审核"}}</button>
      </form>
    </view>

</view>


