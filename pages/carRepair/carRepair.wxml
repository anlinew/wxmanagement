<view class="weui-tab__content" >
<form bindsubmit="torepair">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">检测车辆</view>
        </view>
        <view class="weui-cell__bd">
          <navigator url="../searchLicense/searchLicense" hover-class="none">
            <view class="weui-select weui-select_in-select-after {{license?'':'phcolor'}}">{{license?license:'请选择车牌号'}}</view>
          </navigator>
        </view>
    </view>
     <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">司机</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value='{{driver}}' placeholder="司机姓名" placeholder-class="phcolor"/>
        </view>
    </view>
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">司机电话</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value='{{driver}}' placeholder="请输入手机号" placeholder-class="phcolor"/>
        </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title zebra status">
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">车辆状态</view>
        </view>
    </view>   
  </view>
  <view class="weui-cells weui-cells_after-title">
    <radio-group bindchange="radioChange">
        <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="{{item.value}}">
            <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
            <view class="weui-cell__hd weui-check__hd_in-checkbox">
                <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
                <icon class="weui-icon-checkbox_success iconcolor" type="success" size="23" wx:if="{{item.checked}}" color="#3E85FF"></icon>
            </view>
            <view class="weui-cell__bd">{{item.name}}</view>
        </label>
    </radio-group>
    <view >
      <view class="{{isway === '0'?'isshow':''}}"></view>
      <view class='license'>
      <checkbox-group bindchange="checkboxChange">
        <label class="weui-check__label" wx:for-items="{{liceniseArr}}" wx:key="{{item.value}}" class='label'>
            <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
            <view><text class="{{item.checked&&isway==='1'?'current':''}}">{{item.name}}</text></view>
        </label>
      </checkbox-group>
      </view>
    </view>
  </view>
  <button class="weui-btn createdDispatch" type="primary" formType="submit">提交</button>
   </form>
</view>
